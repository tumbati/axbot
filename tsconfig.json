{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node16",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}