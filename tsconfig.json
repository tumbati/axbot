{
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "Node16",
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "Node16",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}